<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:padding="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivProfilepic"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            app:riv_border_color="@color/colorNoComments"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="@dimen/_20sdp"
            tools:src="@drawable/profile_pic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="start|center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Testing"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp"
                        android:theme="@style/styleTextMedium"
                        tools:text="Harna" />

                    <TextView
                        android:id="@+id/tvComments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TestComments"
                        android:textColor="@color/colorGrey700"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="-7dp"
                        android:theme="@style/styleTextMedium"
                        tools:text="Nice Status:)" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorNoComments"
                    android:textSize="@dimen/_10sdp"
                    android:theme="@style/styleTextMedium"
                    tools:text="100" />

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="@string/content_desc"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/p_heart_liked" />

                <!-- <ImageView
                     android:id="@+id/ivCommentMenu"
                     android:layout_width="@dimen/_30sdp"
                     android:layout_height="@dimen/_30sdp"
                     android:contentDescription="@string/content_dec"
                     android:gravity="center"
                     android:padding="@dimen/_5sdp"
                     android:visibility="gone"
                     android:src="@drawable/ic_three_dot" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="12:24 am"
                    android:textColor="@color/colorNoComments"
                    android:textSize="@dimen/_9sdp"
                    android:theme="@style/styleTextMedium"
                    tools:text="Just now" />

                <LinearLayout
                    android:id="@+id/llReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/reply_comment_ic" />

                    <TextView
                        android:id="@+id/tvReply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:text="@string/reply"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_9sdp"
                        android:theme="@style/styleTextSemiBold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/llViewReply"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="30dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/colorGrey500"/>
            <TextView
                android:id="@+id/tvViewReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/colorGrey500"
                tools:text="@string/view_reply"/>
        </LinearLayout>

</LinearLayout>
