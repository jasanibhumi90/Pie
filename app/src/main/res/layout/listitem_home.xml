<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:id="@+id/cvPost"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="@dimen/_10sdp"
    android:orientation="horizontal"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/profile_pic"
        app:riv_corner_radius="@dimen/_50sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvUserName"
                style="@style/styleTextSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Austin Distel"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_3sdp"
                android:layout_height="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@color/tab_text"
                app:riv_corner_radius="@dimen/_50sdp" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/styleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30 M"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/three_dot" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPostDesc"
            style="@style/styleTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="best guiled to success and businness growth"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_11sdp" />
        <!-- <com.makeramen.roundedimageview.RoundedImageView android:layout_width="match_parent"
                                                          android:layout_height="@dimen/_120sdp"
                                                          android:layout_marginTop="@dimen/_5sdp"
                                                          android:src="@drawable/image"
                                                          android:visibility="visible"
                                                          android:id="@+id/ivPostImage"
                                                          android:scaleType="centerCrop"
                                                          app:riv_corner_radius="@dimen/_5sdp"/>-->
        <LinearLayout
            android:id="@+id/llOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivImage1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone"
                app:riv_corner_radius="@dimen/_5sdp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivImage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone"
                app:riv_corner_radius="@dimen/_5sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivImage3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone"
                app:riv_corner_radius="@dimen/_5sdp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivImage4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/colorBlack"
                android:visibility="gone"
                app:riv_corner_radius="@dimen/_5sdp" />
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:visibility="gone"
                        android:id="@+id/rlView">
            <com.makeramen.roundedimageview.RoundedImageView android:layout_width="match_parent"
                                                             android:layout_height="@dimen/_130sdp"
                                                             android:layout_weight="1"
                                                             android:id="@+id/ivVideoView"
                                                             android:visibility="visible"
                                                             app:riv_corner_radius="@dimen/_5sdp"
                                                             android:layout_marginTop="@dimen/_10sdp"
                                                             android:layout_marginBottom="@dimen/_10sdp"
                                                             android:scaleType="centerCrop"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:background="@drawable/icon_video_play"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp">

            <TextView
                android:id="@+id/tvLikes"
                style="@style/styleTextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/p_heart_liked"
                android:drawablePadding="@dimen/_5sdp"
                android:text="55"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvComments"
                style="@style/styleTextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/p_comment"
                android:drawablePadding="@dimen/_5sdp"
                android:text="10"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvViews"
                style="@style/styleTextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/p_views"
                android:drawablePadding="@dimen/_5sdp"
                android:text="18"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11sdp" />

            <TextView
                style="@style/styleTextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/p_dollar"
                android:drawablePadding="@dimen/_5sdp"
                android:text="0.00"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout><View
android:layout_width="match_parent"
android:layout_height="0.3dp"
android:background="@color/tab_text" /></LinearLayout>